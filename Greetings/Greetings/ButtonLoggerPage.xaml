<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Greetings.ButtonLoggerPage">
    <ContentPage.Content>
        <StackLayout Padding="5, 20, 5, 0">
            <Button Text="Log the Click Time" Clicked="OnButtonClicked"></Button>
            <ScrollView VerticalOptions="FillAndExpand">
                <StackLayout x:Name="loggerLayout"></StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>